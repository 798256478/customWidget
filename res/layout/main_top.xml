<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <TextView 
	    android:layout_height="50dp"
	    android:layout_width="match_parent"
	    android:background="#666"
	    android:text="自定义控件"
	    android:textColor="#fff"
	    android:textSize="18sp"
	    android:gravity="center"/>
	    
	<com.example.kongjian.view.SwitchButton
	    xmlns:kongjian="http://schemas.android.com/apk/res/com.example.kongjian"
	    android:id="@+id/sb_switch_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        kongjian:switch_background="@drawable/switch_background"
        kongjian:slide_button="@drawable/slide_button"
        kongjian:switch_state="true">   
    </com.example.kongjian.view.SwitchButton>

</RelativeLayout>
